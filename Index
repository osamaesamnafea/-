<script>
    function increment(id) {
        const el = document.getElementById(id);
        el.textContent = parseInt(el.textContent) + 1;
    }

    function decrement(id) {
        const el = document.getElementById(id);
        el.textContent = parseInt(el.textContent) - 1;
    }
</script>

